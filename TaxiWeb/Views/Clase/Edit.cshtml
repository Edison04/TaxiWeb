@model TaxiWeb.Models.Clase

@{
    ViewBag.Title = "Editar Clase";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>@ViewBag.Title</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        <div class="row">
            <div class="form-group">
                <div class="input-field col s12">
                    @Html.DropDownList("IdConductor", null, htmlAttributes: new { @class = "form-control" })
                    @Html.LabelFor(model => model.IdConductor, htmlAttributes: new { @class = "control-label col-md-2" })
                    @Html.ValidationMessageFor(model => model.IdConductor, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="row">
            <div class="form-group">
                <div class="input-field col s12">
                    @Html.EditorFor(model => model.FechaClase, new { htmlAttributes = new { @class = "datepicher", @type = "text"} })
                    @Html.LabelFor(model => model.FechaClase, htmlAttributes: new { @class = "control-label col-md-2" })
                    @Html.ValidationMessageFor(model => model.FechaClase, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="row">
            <div class="form-group">
                <div class="input-field col s12">
                    @Html.EditorFor(model => model.NombreInstructor, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.LabelFor(model => model.NombreInstructor, htmlAttributes: new { @class = "control-label col-md-2" })
                    @Html.ValidationMessageFor(model => model.NombreInstructor, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="row">
            <div class="form-group">
                <div class="input-field col s6">
                    @Html.EditorFor(model => model.HoraInicio, new { htmlAttributes = new { @class = "timepicker", @type = "text" } })
                    @Html.LabelFor(model => model.HoraInicio, htmlAttributes: new { @class = "control-label col-md-2" })
                    @Html.ValidationMessageFor(model => model.HoraInicio, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="input-field col s6">
                    @Html.EditorFor(model => model.HoraFin, new { htmlAttributes = new { @class = "timepicker", @type = "text" } })
                    @Html.LabelFor(model => model.HoraFin, htmlAttributes: new { @class = "control-label col-md-2" })
                    @Html.ValidationMessageFor(model => model.HoraFin, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="row">
            <div class="form-group">
                <div class="input-field col s12 center">
                    <input type="submit" value="Guardar" class="btn btn-default" />
                    @Html.ActionLink("Volver", "Index")
                </div>
            </div>
        </div>
    </div>
}
